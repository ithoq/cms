doctype html
html
  head
    include shared/head.jade

  body.fixed-header
    .page-container
      include shared/header.jade
      .page-content-wrapper
        .content
          .container-fluid.container-fixed-lg
            .row
              form.cms-install-form
                .panel.panel-default
                  .panel-heading
                    .panel-title
                      h2 CMS Installation
                  .panel-body
                    form(role='form')
                      h4 Site settings
                      .form-group
                        label  Site name
                        input.form-control(type='email', required='')
                      .form-group
                        label Site URL
                        span.help e.g. "www.web.com"
                        input.form-control(type='password', required='')
                      .form-group
                        label Description (SEO)
                        span.help max 155 character
                        textarea.form-control#site-desc(type='password',maxlength='155', required='')
                      .form-group
                        label Site languages
                        span.help choose one or more language used by the website
                        .selectContainer
                          select#SelectSiteLang(name='toppings', multiple='', size='5')
                            option(value='1') Template 1
                            option(value='2') Template 2
                      .form-group
                        label Admin languages
                        span.help language of the administration
                        .selectContainer
                          select#SelectAdminLang(name='toppings', size='5')
                            option(value='1') Template 1
                            option(value='2') Template 2
  
                      h4 Super admin account
                      .form-group
                        label User
                        input.form-control(type='email', required='')
                      .form-group
                        label Password
                        input.form-control(type='password', required='')
                      .form-group
                        label Confirm Password
                        input.form-control(type='password', required='')
                      .form-group
                        label Email
                        span.help e.g. "some@example.com"
                        input.form-control(type='email', placeholder='ex: some@example.com', required='')
                    hr
                    input.btn.btn-success(type='submit', value='Submit')

      include shared/footer.jade
    include shared/bottom.jade
    script.
      $("#SelectSiteLang").select2({
        placeholder: "Select a Language",
        allowClear: true
      });
      $("#SelectAdminLang").select2({
        placeholder: "Select a Language",
        allowClear: true,
        minimumResultsForSearch: -1
      });

      
